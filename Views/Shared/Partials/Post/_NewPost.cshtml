@model Post
<h2 class="mt-3">Create a Post</h2>
<form asp-action="CreatePost" method="post">
    <textarea asp-for="MyPost" class="form-control"></textarea>
    <span asp-validation-for="MyPost" class="text-danger"></span>
    <input type="submit" value="Submit" class="btn btn-success mt-2">
</form>