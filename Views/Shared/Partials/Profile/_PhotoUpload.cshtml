@model List<Photo>

<div class="row mt-3">
    <div class="col-5">
        <form asp-action="AddPhoto" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Upload Photo</label>
                <input type="file" name="file" id="file" class="form-control" accept="image/*" required />
            </div>
            <button type="submit" class="btn btn-primary mt-3">Upload</button>
        </form>

    </div>
    <div class="col-7">
        <div class="row">
            @foreach (Photo p in Model)
            {
                <div class="col-4 mt-3">
                    <img class="rounded" src="@p.PhotoUrl" style="width: 100%;" alt="photo">
                        <div class="d-flex justify-content-center gap-1">
                            <form asp-action="ProfilePhoto" asp-route-photoId="@p.PhotoId" method="post">
                                @if (p.IsMain){
                                <button disabled class=" btn btn-success btn-sm px-2 py-0 mt-1"><i class="fa-solid fa-user"></i></button>
                                }else{
                                <button type="submit" class="btn btn-outline-success btn-sm px-2 py-0 mt-1"><i class="fa-solid fa-user"></i></button>
                                }
                            </form>
                            <form asp-action="DeletePhoto" asp-route-photoId="@p.PhotoId" method="post">
                                @if (p.IsMain){
                                <button disabled class="btn btn-danger btn-sm px-2 py-0 mt-1"><i class="fa-solid fa-trash"></i></button>
                                }else{
                                <button type="submit" class="btn btn-outline-danger btn-sm px-2 py-0 mt-1"><i class="fa-solid fa-trash"></i></button>
                                }
                            </form>
                        </div>

                </div>
            }
        </div>
    </div>
</div>
