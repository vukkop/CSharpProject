@model LoginUser

<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="light">
  <div class="container-fluid">
    <a class="navbar-brand text-light" href="#">VR Media</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
      </ul>
      <form asp-action="Login" asp-controller="Home" method="post" class="d-flex">
        <div class="me-sm-2">
        <input asp-for="EmailLogin" class="form-control me-sm-2" placeholder="Email">
        <small><span asp-validation-for="EmailLogin" class="text-danger"></span></small>
        </div>
        <div class="me-sm-2">
        <input asp-for="PasswordLogin" class="form-control me-sm-2" placeholder="Password">
        <small><span asp-validation-for="PasswordLogin" class="text-danger"></span></small>
        </div>
        <input class="btn btn-secondary my-2 my-sm-0" type="submit" value="Login">
      </form>
    </div>
  </div>
</nav>
